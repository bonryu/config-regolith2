# Xresources settings
# T460 laptop setup at home
set_from_resource $output1 i3.output.1.name     eDP-1
set_from_resource $output2 i3.output.2.name     DP-2-1 # $output0
set_from_resource $output3 i3.output.2.name     DP-2-2 # $output1

# home desktop setup
set_from_resource $output1 i3.output.1.name	DP-1  #HDMI-2
set_from_resource $output2 i3.output.2.name	HDMI-2  #DP-1 #output0

# set_from_resource $layout0 i3.output.0.layout tabbed
# set_from_resource $layout1 i3.output.1.layout tabbed
# set_from_resource $layout2 i3.output.2.layout splith
# 
# set_from_resource $primary i3.output.primary HDMI-2
# set_from_resource $secondary i3.output.secondary None
# set_from_resource $third i3.output.third None

# Automatically putting workspaces on specific screens
# Use as many outputs as we have defined. So if we only have two displays.
# E.g. a dual monitor desktop setup, then we would get rid of the column that looks like
#  $output2
#  ...
#  $output3
# because we would have no output3.
workspace 1     output $output2 $output1
workspace 2     output $output2 $output1
workspace 3     output $output2 $output1
workspace 4     output $output2 $output1
workspace 5     output $output2 $output1
workspace 6     output $output2 $output1
workspace 7     output $output2 $output1
workspace 8     output $output2 $output1
workspace 9     output $output2 $output1
workspace 10    output $output2 $output1
workspace 11    output $output3 $output2 $output1
workspace 12    output $output3 $output2 $output1
workspace 13    output $output3 $output2 $output1
workspace 14    output $output3 $output2 $output1
workspace 15    output $output3 $output2 $output1
workspace 16    output $output3 $output2 $output1
workspace 17    output $output3 $output2 $output1
workspace 18    output $output3 $output2 $output1
workspace 19    output $output3 $output2 $output1
workspace 20    output $output3 $output2 $output1
